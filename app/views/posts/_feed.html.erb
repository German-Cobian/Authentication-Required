<div class="col-3 mt-5">
    <h2 class="ml-2 pl-3 pb-4 bg-secondary">Topics</h2>
      <ul>
        <% @posts.each do |post| %>
        <li class="border-bottom">
            <%= post.title %>
          </li>
        <% end %>
      </ul>
    </div>

  <div class="col-6 mt-5">
  <h2 class="pl-3 pb-4 bg-secondary">Content</h2>
    <ul>
      <% @posts.each do |post| %>
      <li class="border-bottom">
          <%= post.content %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-3 mt-5">
    <h2 class="mr-2 pl-3 pb-4 bg-secondary">Authors</h2>
    <ul>
      <% @posts.each do |post| %>
        <% if user_signed_in? %>
            <li class="border-bottom">
              <%= post.user.username %>
            </li>
          <% else %>
            <li class="border-bottom">
              ***
            </li>
          <% end %>
        <% end %>
    </ul>
  </div>